<style>
  :root{
    --primary:#4c6ef5;
    --accent:#9775fa;
    --card-bg:#f8f9ff;
    --muted:#777;
    --accent-2:#4dabf7;
  }
  *{box-sizing:border-box}
  body{
    margin:0;
    background:#ffffff;
    font-family: "Poppins", Arial, sans-serif;
    color:#222;
    -webkit-font-smoothing:antialiased;
    -moz-osx-font-smoothing:grayscale;
  }

  header{
    background: linear-gradient(120deg,var(--primary),var(--accent));
    color:white;
    text-align:center;
    padding:44px 18px 80px;
    position:relative;
  }
  header h1{ margin:0; font-size:34px; font-style:italic; font-weight:700; }
  header p.lead{ margin:8px 0 0; font-size:15px; opacity:0.95; }

  .info-card{
    width:92%;
    max-width:980px;
    margin: 20px auto 18px;
    background:#fff;
    padding:26px;
    border-radius:12px;
    box-shadow:0 6px 22px rgba(17,24,39,0.06);
    border-left:6px solid var(--primary);
    color:#333;
    font-size:15px;
    line-height:1.55;
  }

  .container{ width:92%; max-width:980px; margin: 12px auto 60px; }

  .cta-wrap{ text-align:center; margin-top:10px; margin-bottom:18px; }
  .btn-main{
    background:var(--primary);
    color:#fff;
    border:none;
    padding:12px 26px;
    border-radius:10px;
    font-size:17px;
    cursor:pointer;
    box-shadow:0 8px 18px rgba(76,110,245,0.18);
  }

  #chooseSection{
    display:none;
    margin-top:18px;
    text-align:center;
  }
  .choice-card{
    background:#f8f9ff;
    padding:16px;
    margin:10px auto;
    width:92%;
    max-width:420px;
    border-radius:12px;
    border-left:6px solid var(--accent);
    cursor:pointer;
    font-size:16px;
    box-shadow:0 6px 18px rgba(0,0,0,0.08);
  }

  .choice-card:hover{ opacity:0.9;}

  .test-heading{ text-align:center; font-size:24px; margin:30px 0 18px; color:#2b2b2b; font-weight:700; }
  .test-list{ display:flex; flex-direction:column; gap:14px; margin-bottom:26px; }
  .test-card{
    display:flex;
    gap:14px;
    align-items:flex-start;
    padding:16px;
    border-radius:12px;
    background:var(--card-bg);
    box-shadow:0 6px 18px rgba(15,23,42,0.04);
    border-left:6px solid var(--accent-2);
  }
  .test-card img{ width:72px; height:72px; border-radius:50%; object-fit:cover; }

  .test-body b{ display:block; margin-bottom:6px; color:#0f1724; font-weight:700; }

  .test-body p{
    margin:0;
    color:#2b2b2b;
    font-size:14px;
    line-height:1.5;
    font-style:italic;
  }

  .test-meta{ margin-top:8px; color:var(--muted); font-size:13px; }

  footer{ background:#f5f7fb; padding:22px 12px; text-align:center; color:#4b5563; font-size:14px; margin-top:20px; }
  footer a{ color:var(--primary); text-decoration:none; }

  .telegramFloating{
    position: fixed;
    left: 18px;
    bottom: 20px;
    width: 64px;
    height: 64px;
    border-radius: 50%;
    background: #229ED9;
    display:flex;
    align-items:center;
    justify-content:center;
    z-index:9999;
    box-shadow:0 10px 30px rgba(2,6,23,0.2);
  }
  .telegramFloating img{ width:34px; height:34px; }

  @media (max-width:480px){
    header{ padding:36px 12px 90px; }
    .info-card{ margin:20px auto 18px; padding:18px; }
  }

  /* Processing overlay */
  #processingOverlay{
    position:fixed;
    top:0; left:0;
    width:100%; height:100%;
    background:rgba(255,255,255,0.9);
    display:none;
    align-items:center;
    justify-content:center;
    font-size:22px;
    font-weight:600;
    color:#333;
    z-index:999999;
  }
</style>
</head>
