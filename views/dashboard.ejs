<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>EscrowSwap ‚Äì Dashboard</title>

<style>
    body {
        margin: 0;
        font-family: Arial, sans-serif;
        background: #f3f4f7;
    }

    /* HEADER */
    .topbar {
        background: #111;
        color: white;
        padding: 15px;
        display: flex;
        align-items: center;
        gap: 15px;
    }

    .hamburger {
        cursor: pointer;
        font-size: 22px;
        font-weight: bold;
    }

    .title {
        font-size: 20px;
        font-weight: bold;
    }

    /* SIDEBAR */
    .sidebar {
        width: 250px;
        background: #1c1c1c;
        color: #fff;
        height: 100vh;
        position: fixed;
        top: 0;
        left: -250px;
        transition: 0.3s;
        padding-top: 60px;
    }

    .sidebar.active {
        left: 0;
    }

    .sidebar a {
        display: block;
        padding: 15px;
        text-decoration: none;
        color: #e5e5e5;
        font-weight: bold;
        border-bottom: 1px solid #333;
    }

    .sidebar a:hover {
        background: #444;
    }

    /* MAIN CONTENT */
    .main {
        padding: 20px;
        margin-left: 0;
        transition: 0.3s;
    }

    /* WIDGETS */
    .stats-container {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
        gap: 20px;
        margin-bottom: 25px;
    }

    .stat-box {
        background: white;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0px 2px 10px rgba(0,0,0,0.1);
        font-weight: bold;
    }

    .stat-number {
        font-size: 28px;
        margin-top: 10px;
        color: #0A7cff;
        font-weight: bold;
    }

    /* SECTIONS */
    .section {
        display: none;
        background: white;
        padding: 25px;
        border-radius: 12px;
        box-shadow: 0px 2px 12px rgba(0,0,0,0.12);
    }

    .section.active {
        display: block;
    }

    input, select {
        padding: 10px;
        width: 100%;
        margin: 10px 0;
        border-radius: 8px;
        border: 1px solid #999;
    }

    button {
        padding: 12px 20px;
        background: #0073ff;
        color: white;
        border: none;
        border-radius: 8px;
        cursor: pointer;
        font-weight: bold;
    }
</style>
</head>
<body>

<!-- TOP BAR -->
<div class="topbar">
    <div class="hamburger" onclick="toggleMenu()">‚ò∞</div>
    <div class="title">User Dashboard</div>
</div>

<!-- SIDEBAR -->
<div class="sidebar" id="sidebar">
    <a href="#" onclick="showSection('home')">üè† Dashboard</a>
    <a href="#" onclick="showSection('profile')">üë§ Profile</a>
    <a href="#" onclick="showSection('security')">üîê Security</a>
    <a href="#" onclick="showSection('notifications')">üîî Notifications</a>
    <a href="#" onclick="showSection('settings')">‚öô Account Settings</a>
    <a href="/logout">üö™ Logout</a>
</div>

<!-- MAIN -->
<div class="main">

    <!-- HOME -->
    <div id="home" class="section active">
        <h2>üìä <i>Dashboard Overview</i></h2>

        <div class="stats-container">
            <div class="stat-box">
                Total Transactions
                <div class="stat-number"><%= stats.totalTransactions %></div>
            </div>
            <div class="stat-box">
                Successful Escrows
                <div class="stat-number"><%= stats.successEscrows %></div>
            </div>
            <div class="stat-box">
                Pending Escrows
                <div class="stat-number"><%= stats.pendingEscrows %></div>
            </div>
            <div class="stat-box">
                Total Amount (USD)
                <div class="stat-number">$<%= stats.totalAmount %></div>
            </div>
        </div>

        <p><b>Welcome back!</b> Track your escrow activity and account details here.</p>
    </div>

    <!-- PROFILE -->
    <div id="profile" class="section">
        <h2>üë§ <i>Your Profile</i></h2>

        <label>Email</label>
        <input value="<%= user.email %>" disabled>

        <label>Phone Number</label>
        <input value="<%= user.phone %>" disabled>

        <label>Verification Status</label>
        <input value="<%= user.verified ? 'Verified' : 'Not Verified' %>" disabled>

        <label>Account Created</label>
        <input value="<%= user.created_at %>" disabled>
    </div>

    <!-- SECURITY -->
    <div id="security" class="section">
        <h2>üîê <i>Security Center</i></h2>

        <h3>Enable 2FA (Coming soon)</h3>
        <button disabled>Enable</button>

        <h3 style="margin-top:25px;">Change Password</h3>
        <form method="POST" action="/change-password">
            <input type="password" name="oldPassword" placeholder="Old Password" required>
            <input type="password" name="newPassword" placeholder="New Password" required>
            <button type="submit">Update Password</button>
        </form>
    </div>

    <!-- NOTIFICATIONS -->
    <div id="notifications" class="section">
        <h2>üîî <i>Notifications</i></h2>
        <p>No notifications yet.</p>
    </div>

    <!-- SETTINGS -->
    <div id="settings" class="section">
        <h2>‚öô <i>Account Settings</i></h2>

        <form method="POST" action="/update-settings">
            <label>Change Phone Number</label>
            <input type="text" name="phone" placeholder="Enter new phone">

            <label>Change Email</label>
            <input type="text" name="email" placeholder="Enter new email">

            <button>Save Changes</button>
        </form>
    </div>

</div>

<script>
function toggleMenu() {
    document.getElementById("sidebar").classList.toggle("active");
}

function showSection(id) {
    document.querySelectorAll(".section").forEach(s => s.classList.remove("active"));
    document.getElementById(id).classList.add("active");
    document.getElementById("sidebar").classList.remove("active");
}
</script>

</body>
</html>
